<div
  class="
    overflow-hidden rounded-xl border border-gray-200 bg-white dark:border-gray-800
    dark:bg-white/[0.03]
  "
>
  <div class="max-w-full overflow-x-auto">
    <table class="min-w-full">
      <!-- table header start -->
      <thead>
        <tr class="border-b border-gray-100 dark:border-gray-800">
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Event type
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Timestamp
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Description
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Severity
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Tactic
              </p>
            </div>
          </th>

        </tr>
      </thead>
      <!-- table header end --> <!-- table body start -->
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <% events.each do |event| %>

          <tr>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <div class="flex items-center gap-3">
                  <div>
                    <span class="block font-medium text-gray-800 text-theme-sm dark:text-white/90">
                      <%= event.event_type %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= event.timestamp %>
                </p>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= event.description %>
                </p>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">

                <p
                  class="
                    rounded-full bg-success-50 px-2 py-0.5 text-theme-xs font-medium
                    text-success-700 dark:bg-success-500/15 dark:text-success-500
                  "
                >
                  <%= event.severity %>
                </p>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= event.tactic.name %>
                  (<%= event.tactic.mitre_id %>)
                </p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
