<div
  class="
    overflow-hidden rounded-xl border border-gray-200 bg-white dark:border-gray-800
    dark:bg-white/[0.03]
  "
>
  <div class="max-w-full overflow-x-auto">
    <table class="min-w-full">
      <!-- table header start -->
      <thead>
        <tr class="border-b border-gray-100 dark:border-gray-800">
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Name
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Source Type
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                URL
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Reliability
              </p>
            </div>
          </th>
          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
              <p class="font-medium text-gray-500 text-theme-xs dark:text-gray-400">
                Last updated
              </p>
            </div>
          </th>

          <th class="px-5 py-3 sm:px-6">
            <div class="flex items-center">
            </div>
          </th>
        </tr>
      </thead>
      <!-- table header end --> <!-- table body start -->
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <% sources.each do |source| %>

          <tr>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <div class="flex items-center gap-3">
                  <div>
                    <span class="block font-medium text-gray-800 text-theme-sm dark:text-white/90">
                      <%= source.name %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= source.source_type.upcase %>
                </p>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= source.url %>
                </p>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <% if source.reliability > 60 %>

                  <p
                    class="
                      rounded-full bg-success-50 px-2 py-0.5 text-theme-xs font-medium
                      text-success-700 dark:bg-success-500/15 dark:text-success-500
                    "
                  >
                    <%= source.reliability %>
                  </p>
                <% else %>

                  <p
                    class="
                      rounded-full bg-red-50 px-2 py-0.5 text-theme-xs font-medium text-success-700
                      dark:bg-red-500/15 dark:text-red-500
                    "
                  >
                    <%= source.reliability %>
                  </p>
                <% end %>
              </div>
            </td>
            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center">
                <p class="text-gray-500 text-theme-sm dark:text-gray-400">
                  <%= time_ago_in_words source.updated_at %>
                </p>
              </div>
            </td>

            <td class="px-5 py-4 sm:px-6">
              <div class="flex items-center space-x-3">
                <%= link_to "Edit", edit_app_source_path(source), class: "btn btn-secondary" %>
                <%= button_to "Delete",
                app_source_path(source),
                class: "btn btn-danger",
                method: :delete,
                data: {
                  turbo_confirm: "Are you sure you want to delete this source?",
                } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
