<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
  <span
    class="
      inline-flex relative items-center rounded-r ring-1 ring-inset focus:z-20
      ring-slate-700 border-slate-900 next text-slate-400 dark:ring-slate-700
      dark:hover:bg-slate-700 hover:bg-slate-50 focus:outline-offset-0
    "
  >
    <% unless  current_page.last? %>

      <%= link_to url, class: 'py-2 px-2' do %>
        <svg
          class="size-5"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
          data-slot="icon"
        >
          <path
            fill-rule="evenodd"
            d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
            clip-rule="evenodd"
          />
        </svg>
      <% end %>
    <% end %>
  </span>
